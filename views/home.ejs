<div>
    <ul>
        <% for(movie of movies){ %>
            <li>
                <p>Rating: <%= movie.rating %></p>
                <a href="/movie/open-movie/?id=<%= movie._id %>"><%= movie.name %></a>
            </li>
        <% } %>
    </ul>
</div>